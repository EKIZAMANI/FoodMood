<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.capstone.foodmood1.ui.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_bookmark">

        <action
            android:id="@+id/action_start_to_result"
            app:destination="@id/resultFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.capstone.foodmood1.ui.fragment.BookmarkFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.capstone.foodmood1.ui.fragment.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.capstone.foodmood1.ui.fragment.FoodFragment"
        android:label="Result Fragment"
        tools:layout="@layout/fragment_food"/>
</navigation>